@model SmilyAccountant.Areas.Finance.Models.BudgetDetails

@{
    ViewData["Title"] = "Create";
}



<h4>Add Budget Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BudgetId" class="control-label"></label>
                <select asp-for="BudgetId" class ="form-control" asp-items="ViewBag.BudgetId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GLAccountCardId" class="control-label"></label>
                <select asp-for="GLAccountCardId" class ="form-control" asp-items="ViewBag.GLAccountCardId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BudgetMonth" class="control-label"></label>
                <input asp-for="BudgetMonth" class="form-control" />
                <span asp-validation-for="BudgetMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetYear" class="control-label"></label>
                <input asp-for="BudgetYear" class="form-control" />
                <span asp-validation-for="BudgetYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetedAmount" class="control-label"></label>
                <input asp-for="BudgetedAmount" class="form-control" />
                <span asp-validation-for="BudgetedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalBudgetedAmount" class="control-label"></label>
                <input asp-for="TotalBudgetedAmount" class="form-control" />
                <span asp-validation-for="TotalBudgetedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
