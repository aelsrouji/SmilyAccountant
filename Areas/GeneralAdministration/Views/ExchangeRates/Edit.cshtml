@model SmilyAccountant.Areas.GeneralAdministration.Models.ExchangeRate

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit Exchange Rate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FromCurrencyId" class="control-label"></label>
                <select asp-for="FromCurrencyId" class="form-control" asp-items="ViewBag.FromCurrencyId"></select>
                <span asp-validation-for="FromCurrencyId" class="text-danger"></span>
            </div>
<div class="form-group">
                <label asp-for="ToCurrencyId" class="control-label"></label>
                <select asp-for="ToCurrencyId" class="form-control" asp-items="ViewBag.ToCurrencyId"></select>
                <span asp-validation-for="ToCurrencyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRateValue" class="control-label"></label>
                <input asp-for="ExchangeRateValue" class="form-control" />
                <span asp-validation-for="ExchangeRateValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRateDate" class="control-label"></label>
                <input asp-for="ExchangeRateDate" class="form-control" />
                <span asp-validation-for="ExchangeRateDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" disabled /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
