@model IEnumerable<SmilyAccountant.Models.GLAccountCard>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountSubCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebitCredit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountTypeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountCategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountSubCategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebitCredit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountTypeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
